<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - MyAspProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/myAsp.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                @{
                    if (ViewBag.header == "דף ראשי")
                    {
                        <a class="navbar-brand" style="background-color: red; font-weight: 700;" asp-area="" asp-controller="Home" asp-action="Index" onclick="javascript:return false;">דף ראשי</a>
                    }
                    else
                    {
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">דף ראשי</a>
                    }
                }


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul id="menu" class="navbar-nav">
                        <li class="nav-item">
                            @{
                                if (ViewBag.header == "אודותינו")
                                {
                                    <a class="nav-link text-dark" style="background-color: red; font-weight: 700;" asp-area="" asp-controller="Home" asp-action="About" onclick="javascript:return false;">אודותינו</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">אודותינו</a>
                                }
                            }
                        </li>
                        <li class="nav-item">
                            @{
                                if (ViewBag.header == "סל קניות")
                                {
                                    <a class="nav-link text-dark" style="background-color: red; font-weight: 700;" asp-area="" asp-controller="Product" asp-action="ShoppingCart" onclick="javascript:return false;">סל קניות</a>
                                }
                                else
                                {
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="ShoppingCart">סל קניות</a>
                                }
                            }
                        </li>
                        @{
                            if (Context.Request.Cookies["firstName"] != null)
                            {
                                <li class="nav-item">
                                    @{
                                        if (ViewBag.header == "עדכון פרטים")
                                        {
                                            <a class="nav-link text-dark" style="background-color: red; font-weight: 700;" asp-area="" asp-controller="User" asp-action="Registration" onclick="javascript:return false;">עדכון פרטים אישיים</a>
                                        }
                                        else
                                        {
                                            <a class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Registration">עדכון פרטים אישיים</a>
                                        }
                                    }
                                </li>
                                <li class="nav-item">
                                    @{
                                        if (ViewBag.header == "פרסם מודעה")
                                        {
                                            <a class="nav-link text-dark" style="background-color: red; font-weight: 700;" asp-area="" asp-controller="Product" asp-action="PostAnAd" onclick="javascript:return false;">פרסום מודעה</a>
                                        }
                                        else
                                        {
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="PostAnAd">פרסום מודעה</a>
                                        }
                                    }
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    @{
                                        if (ViewBag.header == "רישום לאתר")
                                        {
                                            <a id="Registration" runat="server" class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Registration" style="background-color: red; font-weight: 700;" onclick="javascript:return false;">רישום פרטים אישיים</a>
                                        }
                                        else
                                        {
                                            <a id="Registration" runat="server" class="nav-link text-dark" asp-area="" asp-controller="User" asp-action="Registration">רישום פרטים אישיים</a>
                                        }
                                    }
                                </li>
                            }
                        }
                    </ul>
                    <ul class="navbar-nav ml-auto">
                       <img src="~/images/לוגו1.jpg" width="200" height="100"/>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        @{
                            await Html.RenderPartialAsync("Main");
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            <div style="margin-bottom:100px;"> <h1>@ViewBag.header</h1> </div>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - MyAspProject - <a asp-area="" asp-controller="Home" asp-action="About">אודות</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
