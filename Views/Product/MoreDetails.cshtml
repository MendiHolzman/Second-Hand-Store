@model MyAspProject.Models.UserProductViewModel

@{
    ViewBag.Title = "פרטים נוספים";
    ViewBag.header = "פרטים נוספים";
}

@{
    Layout = "layoutWithoutLinks";
}

<h4> פרטים מלאים על המוצר </h4>
<hr />

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Product.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Id)
        </dd>
        <dt>
            כותרת
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Title)
        </dd>
        <dt>
            תיאור קצר
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.ShortDescription)
        </dd>
        <dt>
            תיאור ארוך
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.LongDescription)
        </dd>
        <dt>
            מחיר
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
        <dt>
            תאריך פרסום
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.Date)
        </dd>
        <dt>
            תמונה 1
        </dt>
        <dd>
            <img alt="אין תמונה" src="~/images/@Model.Product.Image1" height="120" width="150" />
        </dd>
        <dt>
            תמונה 2
        </dt>
        <dd>
            <img alt="אין תמונה" src="~/images/@Model.Product.Image2" height="120" width="150" />
        </dd>
        <dt>
            תמונה 3
        </dt>
        <dd>
            <img alt="אין תמונה" src="~/images/@Model.Product.Image3" height="120" width="150" />
        </dd>
    </dl>
</div>

<div style="margin-top:80px;">
    <dl class="dl-horizontal">
        <dt style="font-size:25px;">
            פרטי המפרסם
        </dt>
        <dt>
            Id
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Product.OwnerId)
        </dd>
        <dt>
            שם פרטי
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.FirstName)
        </dd>
        <dt>
            שם משפחה
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.LastName)
        </dd>
        <dt>
            תאריך לידה
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Birthday)
        </dd>
        <dt>
            מייל
        </dt>
        <dd>
            @Html.DisplayFor(model => model.User.Email)
        </dd>
    </dl>
</div>

@Html.ActionLink("למסך הראשי", "Index", "Home", new { id = Model.Product.Id }, new { @class = "btn btn-primary border-secondary" })
@{
    if (TempData["cart"] == null)
    {
        @Html.ActionLink("הוסף לסל", "AddToShoppingCart", "Product", new { id = Model.Product.Id }, new { @class = "btn btn-primary border-secondary" })
    }
    else
    {
        @Html.ActionLink("חזור לסל", "ShoppingCart", "Product", new { id = Model.Product.Id }, new { @class = "btn btn-primary border-secondary" })
    }
}
